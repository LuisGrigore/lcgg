CC := gcc
CFLAGS := -Wall -Wextra -Werror -Iexternal_deps -MMD -MP
LDFLAGS := -Lexternal_deps
LDLIBS := -lm  # Add necessary libraries here

SRC_DIR := tests
OBJ_DIR := obj
EXT_DEPS := external_deps
BUILD_DIRS := $(OBJ_DIR)

# Find all .c files in the tests directory
SRC_FILES := $(shell find $(SRC_DIR) -name "*.c")
OBJ_FILES := $(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRC_FILES))
DEP_FILES := $(patsubst %.o,%.d,$(OBJ_FILES))

# Create necessary directories
$(shell mkdir -p $(BUILD_DIRS))

all: test_runner

test_runner: $(OBJ_FILES)
	$(CC) $(OBJ_FILES) $(LDFLAGS) $(LDLIBS) -o $@

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(dir $@)
	$(CC) $(CFLAGS) -c $< -o $@

# Include dependency files
-include $(OBJ_FILES:.o=.d)

clean:
	rm -rf $(OBJ_DIR) test_runner

.PHONY: all clean
