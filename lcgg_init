export BASE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/.."

export SRC_DIR=$BASE_DIR/src

export TEST_DIR=$BASE_DIR/test

export EXTERNALS_DIR=$BASE_DIR/externals

export LCGG_DIR=$BASE_DIR/lcgg

export INCLUDES_DIR=$BASE_DIR/includes




#!/bin/bash

# Obtener la ruta absoluta del directorio del script
SCRIPT_DIR="$LCGG_DIR/app"
LCGG_PATH="$SCRIPT_DIR/lcgg"

# Verificar si el ejecutable existe
if [ ! -f "$LCGG_PATH" ]; then
    echo "❌ Error: No se encontró 'lcgg' en $SCRIPT_DIR"
    exit 1
fi

# Verificar si lcgg es ejecutable, si no, darle permisos
if [ ! -x "$LCGG_PATH" ]; then
    chmod +x "$LCGG_PATH"
    echo "✅ Se ha hecho 'lcgg' ejecutable."
fi

# Añadir al PATH si no está ya añadido
if [[ ":$PATH:" != *":$SCRIPT_DIR:"* ]]; then
    # Detectar si usa Bash o Zsh
    if [ -n "$BASH_VERSION" ]; then
        CONFIG_FILE="$HOME/.bashrc"
    elif [ -n "$ZSH_VERSION" ]; then
        CONFIG_FILE="$HOME/.zshrc"
    else
        echo "❌ Error: Shell no soportado. Añade '$LCGG_PATH' manualmente a tu PATH."
        exit 1
    fi

    # Agregar al PATH en el archivo de configuración
    echo "export PATH=\"\$PATH:$SCRIPT_DIR\"" >> "$CONFIG_FILE"
    
    # Recargar el shell para aplicar cambios
    source "$CONFIG_FILE"

    echo "✅ 'lcgg' ha sido añadido al PATH."
    echo "ℹ️ Cierra y vuelve a abrir la terminal o ejecuta 'source $CONFIG_FILE' para aplicar los cambios."
else
    echo "✅ 'lcgg' ya está en el PATH."
fi
